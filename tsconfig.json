{
  "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "lib": ["ES2024"],
      "declaration": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist", "node_modules"]
}